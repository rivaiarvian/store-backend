<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No</th>
            <th>Username</th>
            <th>Email</th>
            <th>No.Telephone</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i=0; i < player.length; i++){%>
            <tr>
                <td><%= i+1 %></td>
                <td><%= player[i].username%></td>
                <td><%= player[i].email%></td>
                <td><%= player[i].phoneNumber%></td>
                <td>
                    <form action="/player/delete/<%= player[i]._id %>?_method=DELETE" method="POST">
                        <a href="/player/edit/<%= player[i]._id%>" class="btn btn-info btn-sm">
                            <i class="fas fa-pencil-alt"></i>
                            Ubah
                        </a>
                        <button class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                            Hapus
                        </button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>