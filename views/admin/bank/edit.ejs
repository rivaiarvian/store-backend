<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Bank</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
              <li class="breadcrumb-item active">Ubah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Form ubah bank "<%=bank.name%>"</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/bank/edit/<%=bank._id%>?_method=PUT" method="POST">
                    <div class="card-body">
                      <div class="form-group">
                          <label for="name">Nama pemilik</label>
                          <input type="text" class="form-control" value="<%=bank.name%>" name="name" placeholder="Masukan nama pemilik" required>
                      </div>
                      <div class="form-group">
                        <label>Nama bank</label>
                        <select class="form-control select2" style="width: 100%;" name="bankName">
                          <option selected="selected">Pilih Bank</option>
                          <option value="BCA"
                          <% if(bank.bankName=== "BCA"){ %>
                            selected
                          <% } %>
                          >BCA</option>
                          <option value="BRI"
                          <% if(bank.bankName === "BRI"){ %>
                            selected
                          <% } %>
                          >BRI</option>
                          <option value="DKI"
                           <% if(bank.bankName === "DKI"){ %>
                            selected
                          <% } %>
                          >DKI</option>
                          <option value="Mandiri"
                           <% if(bank.bankName === "Mandiri"){ %>
                            selected
                          <% } %>
                          >Mandiri</option>
                          <option value="Mega"
                           <% if(bank.bankName === "Mega"){ %>
                            selected
                          <% } %>
                          >Mega</option>
                        </select>
                      </div>
                      <div class="form-group">
                          <label for="noRekening">Nomor rekening</label>
                          <input type="number" class="form-control" value="<%=bank.noRekening%>" name="noRekening" placeholder="Masukan nomor rekeking" required>
                      </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Ubah</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->

            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>
